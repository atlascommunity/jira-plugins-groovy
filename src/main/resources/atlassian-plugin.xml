        />
        <resource
                type="velocity"
                name="input-parameters"
                location="ru/mail/jira/plugins/groovy/templates/registry-script-edit.vm"
        />
        <resource
                type="velocity"
                name="edit-parameters"
                location="ru/mail/jira/plugins/groovy/templates/registry-script-edit.vm"

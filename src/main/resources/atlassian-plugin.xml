        name="Groovy JQL searcher"
        class="ru.mail.jira.plugins.groovy.impl.jql.JqlFieldSearcher"
    >
        <valid-customfield-type package="ru.mail.jira.plugins.groovy" key="groovy-jql-field"/>
    </customfield-searcher>

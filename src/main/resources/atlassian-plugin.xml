    >
        <validator-class>
            ru.mail.jira.plugins.groovy.impl.workflow.ScriptedValidator
        </validator-class>

        <resource
                type="velocity"
                name="view"
                location="ru/mail/jira/plugins/groovy/templates/registry-script-view.vm"
        />
        <resource
                type="velocity"
                name="input-parameters"
